<h1>Books</h1>
<table>
<tr>
  <td>Title</td>
  <td>body</td>
</tr>
</table>

<% @books.each do |book| %>
  <table>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "show", book_path(book.id) %></td>
    <td><%= link_to "edit", edit_book_path(book.id) %></td>
    <td><%= link_to "destroy", books_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
  </tr>
  </table>

<% end %>

<h2>New book</h2>

<%= form_with model: @booknew do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>
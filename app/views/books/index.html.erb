
<h1>Books</h1>
<table class="index-table">
<tr>
  <td>Title</td>
  <td>body</td>
</tr>
</table>
<% @books.each do |book| %>
  <table class="index-table">
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
  </table>

<% end %>

<h2>New book</h2>

<% if @booknew.errors.any? %>
  <%= @booknew.errors.count %> error occurred
  <ul>
    <% @booknew.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @booknew do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  </br><%= f.submit 'Create Book' %>

<% end %>